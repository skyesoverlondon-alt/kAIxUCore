# Environment variable template for kAIxU Core
# Copy this file to ".env" and fill in the appropriate values.

# Database
NEON_DATABASE_URL=

# Public API key (optional)
KAIXU_PUBLIC_API_KEY=
# Allow anonymous access when set to a truthy value (1, true, yes, on)
KAIXU_ALLOW_ANON=

# Admin token (required for ingest-business and other admin endpoints)
KAIXU_ADMIN_TOKEN=

# Embeddings configuration
# You can either provide a custom endpoint or use OpenAI-compatible API settings.
EMBEDDING_ENDPOINT=
EMBEDDING_API_KEY=
EMBED_API_KEY=
EMBED_BASE_URL=https://api.openai.com
EMBED_MODEL=text-embedding-3-small

# Language model (chat) configuration
LLM_ENDPOINT=
LLM_API_KEY=
LLM_BASE_URL=https://api.openai.com
LLM_MODEL=gpt-4o
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=800

# CORS settings
CORS_ALLOW_ORIGIN=*

# RAG / embedding behavior tuning
THREAD_LIMIT=10
RAG_TOPK_USER=6
RAG_TOPK_BIZ=6
RAG_POLICY=

EMBED_ASSISTANT=true
EMBED_ASSISTANT_MAX_CHARS=5000
